@model Formulario.Models.Curso
@{
    ViewData["Title"] = "Formulario";
}
<h1>@ViewData["Title"]</h1>
<div class="container">
    <h1 class="text-center mb-4">Curso</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Curso" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Categoria" class="control-label"></label>
                    <select asp-for="Categoria" class="form-control">
                        <option value="">Seleccione una categor√≠a</option>
                        <option value="Obligatoria">Obligatoria</option>
                        <option value="NoObligatoria">No Obligatoria</option>
                        <option value="Electivo">Electivo</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Creditos" class="control-label"></label>
                    <input asp-for="Creditos" type="number" class="form-control" />
                    <span asp-validation-for="Creditos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Modalidad" class="control-label"></label><br />
                    <label><input type="radio" asp-for="Modalidad" value="Remoto" /> Remoto</label>
                    <label><input type="radio" asp-for="Modalidad" value="Presencial" /> Presencial</label>
                    <label><input type="radio" asp-for="Modalidad" value="Hibrido" /> Hibrido</label>
                    <span asp-validation-for="Modalidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Material del Curso:</label><br />
                    <label><input type="radio" asp-for="Material" value="Video" /> Video</label>
                    <label><input type="radio" asp-for="Material" value="Libro" /> Libro</label>
                    <span asp-validation-for="Material" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Hora" class="control-label"></label>
                    <input asp-for="Hora" type="time" class="form-control" />
                    <span asp-validation-for="Hora" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Costo Total del Curso:</label>
                    <input type="text" readonly class="form-control-plaintext" value="@ViewData["CostoTotal"]" />
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </form>
            <h1>@ViewData["Message"]</h1>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

